<!-- STYLING FOR SEARCH BAR -->
<style>
  .search-input{
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
  }

  .search-btn{
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
  }

  .search-btn:hover{
    background-color: #fe424d;
    color: white;
  }

  .search-btn i{
    display: inline;
    margin-right: 0.5rem;
  }
</style>


<!-- NAVBAR -->
<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- NAVIGATION OPTIONS -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- SEARCH BAR -->
      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input class="form-control me-2 search-input" type="search" placeholder="Search destinations" aria-label="Search">
          <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
        </form>
      </div>

      <!-- LOGGING OPTIONS -->
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Host your home</a>
        <!-- When user is not logged in -->
        <% if(!currUser) {%>
        <a class="nav-link" href="/signup"><b>Sign Up</b></a>
        <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %>

        <!-- When user is logged in -->
        <% if(currUser) {%>
        <a class="nav-link" href="/logout">LogOut</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>